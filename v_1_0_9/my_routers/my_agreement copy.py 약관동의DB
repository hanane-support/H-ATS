# C:\Python\MY_PROJECT\v_1_0_7\my_routers\my_agreement.py (세션 기반 인증 버전)

from fastapi import APIRouter, Request, Depends, HTTPException, status, Response # ✅ Response 임포트 추가
from fastapi.templating import Jinja2Templates
from fastapi.responses import HTMLResponse, JSONResponse

# ✅ JWT 인증 함수 대신 세션 인증 및 캐시 방지 함수 임포트
# requires_auth 대신 require_admin_login 및 set_no_cache_headers 사용
from my_utilities.my_authorization import require_admin_login, set_no_cache_headers 

# 약관 동의 상태 관리 유틸리티 임포트 (기존 내용 유지)
from my_utilities.my_config_agreement import get_agreement_status, set_agreement_status 

# APIRouter 인스턴스 생성
router = APIRouter()

# 템플릿 디렉토리 설정 
templates = Jinja2Templates(directory="my_templates")

# ==========================================================
# 라우터 엔드포인트: 약관 페이지 GET
# ==========================================================

@router.get("/agreement", response_class=HTMLResponse)
async def get_agreement_page(
    request: Request,
    # ✅ JWT requires_auth 대신 세션 require_admin_login 적용
    _: None = Depends(require_admin_login) 
):
    """
    약관 동의 페이지(my_agreement.html)를 렌더링하고 현재 동의 상태를 전달합니다.
    (세션 인증 및 캐시 방지 적용)
    """
    # 1. 현재 약관 동의 상태를 읽어옵니다.
    is_agreement_checked = get_agreement_status()
    
    context = {
        "request": request, 
        "is_agreement_checked": is_agreement_checked, 
        "current_page": "/admin/agreement" 
    }
    
    # 2. 템플릿 응답을 생성합니다.
    response = templates.TemplateResponse("my_agreement.html", context)
    
    # 3. ✅ 캐시 방지 헤더를 응답에 추가하여 뒤로 가기/앞으로 가기 문제 해결
    return set_no_cache_headers(response) 

# ==========================================================
# 라우터 엔드포인트: 약관 동의 처리 POST
# ==========================================================

@router.post("/agreement_confirm")
async def process_agreement_confirm(
    # ✅ require_admin_login 적용
    _: None = Depends(require_admin_login) # 인증된 사용자만 접근 가능
):
    """
    약관 동의 상태를 True로 설정합니다.
    """
    # NOTE: set_no_cache_headers는 GET 요청인 페이지 로드에만 적용하면 됩니다. 
    # POST 요청인 API 엔드포인트에는 필요하지 않습니다.
    
    try:
        # 1. 약관 동의 상태를 파일에 저장
        set_agreement_status(True)
        
        # 2. 성공 응답 반환
        return JSONResponse(content={"message": "약관 동의 상태가 성공적으로 저장되었습니다."}, status_code=status.HTTP_200_OK)
    
    except Exception as e:
        # 오류 발생 시 서버 오류(500) 응답
        raise HTTPException(
            status_code=status.HTTP_500_INTERNAL_SERVER_ERROR,
            detail=f"약관 동의 저장 중 오류 발생: {e}"
        )

# ==========================================================
# 라우터 엔드포인트: 약관 철회 처리 POST
# ==========================================================

@router.post("/agreement_revoke")
async def process_agreement_revoke(
    # ✅ require_admin_login 적용
    _: None = Depends(require_admin_login) # 인증된 사용자만 접근 가능
):
    """
    약관 동의 상태를 False로 설정합니다.
    """
    try:
        # 1. 약관 동의 상태를 파일에 저장
        set_agreement_status(False)
        
        # 2. 성공 응답 반환
        return JSONResponse(content={"message": "약관 동의가 성공적으로 철회되었습니다."}, status_code=status.HTTP_200_OK)
    
    except Exception as e:
        # 오류 발생 시 서버 오류(500) 응답
        raise HTTPException(
            status_code=status.HTTP_500_INTERNAL_SERVER_ERROR,
            detail=f"약관 동의 철회 중 오류 발생: {e}"
        )